{
  "name": "sobap",
  "version": "0.0.1",
  "description": "SOBAP",
  "scripts": {
    "start": "npm run w-jade & npm run w-stylus & npm run watchify & npm run serve",
    "serve": "live-server ./public/",
    "w-jade": "jade -w src -o public",
    "w-stylus": "stylus src/css/main.styl -I node_modules/nib/lib -w -c -o public/css/main.css",
    "watchify": "watchify src/js/main.coffee -v -t coffee-reactify --extension='.cjsx' --extension='.coffee' -o public/js/main.js",
    "build-html": "jade src -o public",
    "build-css": "stylus src/css/main.styl -I node_modules/nib/lib -c -p | cleancss --s1 > public/css/main.min.css",
    "build-js": "browserify src/js/main.coffee -t coffee-reactify --extension='.cjsx' --extension='.coffee' | uglifyjs -m -c warnings=false --comments '/\\/*!/' > public/js/main.min.js",
    "replace-min": "replace 'main.js' 'main.min.js' public/index.html && replace 'main.css' 'main.min.css' public/index.html",
    "build": "npm run build-html && npm run replace-min && npm run build-css && npm run build-js",
    "deploy": "git subtree push --prefix=public/ origin gh-pages --squash"
  },
  "author": "sugarshin",
  "license": "MIT",
  "engines": {
    "node": "0.12.x"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "clean-css": "^3.1.8",
    "coffee-reactify": "^3.0.0",
    "jade": "^1.9.2",
    "live-server": "^0.7.0",
    "nib": "^1.1.0",
    "replace": "^0.3.0",
    "stylus": "^0.50.0",
    "uglify-js": "^2.4.17",
    "watchify": "^2.6.2"
  },
  "dependencies": {
    "bean": "^1.0.15",
    "crel": "^2.1.8",
    "jsonp": "^0.2.0",
    "lodash": "^3.6.0",
    "promise": "^6.1.0",
    "qs": "^2.4.1",
    "react": "^0.13.1"
  }
}
