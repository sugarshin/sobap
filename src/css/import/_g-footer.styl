@charset "utf-8"

.g-footer
  padding 4px .68% 4px
  height 32px
  background #fff
  line-height 32px
  .copyright
    margin 0
    text-align right
    small
      color clr_bk
    a
      color inherit
      &:hover
        text-decoration none
  @media screen and (max-width: 567px)
    position fixed
    top 0
    width 100%
    box-sizing border-box
    z-index 11
    background none
    height auto
    .copyright
      display none
