@charset "utf-8"

.shop
  // border-color clr_lgry
  // border-style solid
  // border-width 2px
  // border-top 0
  // border-left 0
  background clr_wh
  width 32.5%
  // margin-left 1.25%
  margin-bottom 1.25%
  // float left
  // margin auto
  box-sizing border-box
  padding .68%
  color clr_bk
  // &:nth-child(3n + 1)
  //   margin-left 0
  position relative
  @media screen and (max-width: 767px)
    width 47.5%
    margin 1.25%
    padding: 1.25%;

  @media screen and (max-width: 567px)
    width 98.75%
    padding: 2.5%;

  .shop-name
    margin-top 0
    border-bottom 1px solid clr_lgry
    line-height 2
  .shop-g-static-map
    margin 16px 0
    img
      width 100%
      height auto
      vertical-align top
      transition transform .1s ease-out
    a:hover
      img
        transform translateY(-1%) scale(1.01)
  .shop-link-external
    margin 16px 0
    a
      margin 0 4% 4% 0
  .shop-memo-container
    border-top 1px solid clr_lgry
  .star
    position absolute
    top 0
    right 2%
    width 12%
    min-width 32px
    text-align center
    padding 5% 0
    background lighten(clr_bk, 50%)
    box-longshadow(clr_lgry, 4)
    .star-button
      appearance none
      border 0
      background none
      padding 0
      vertical-align top
      span
        color #fff
        font-size 20px
        transition font-size .1s ease-out
    &.starred
      background clr_bk
      .star-button
      span
        color clr_yl
        font-size 22px
