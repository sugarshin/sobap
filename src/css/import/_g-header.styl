@charset "utf-8"

.g-header
  padding 4px 1.25% 4px
  height 32px
  width 97.5%
  background clr_wh
  box-shadow 0 0 1px 0 clr_bk
  line-height 32px
  position fixed
  z-index 10
  h1
    margin 0
    font-size 14px
    display inline-block
    vertical-align top
    a
      font-weight normal
      display block
      font-size 16px
      color clr_bk
      text-decoration none

  .g-menu
    position absolute
    top 0
    right 0
    z-index 10
    height 40px
    line-height 40px
    @media screen and (max-width: 567px)
      position fixed
      bottom 0
      top auto
      width 100%
      background #323b43
      height auto
      line-height normal
    ul
      padding 0
      margin 0
      list-style none
      li
        display inline-block
        list-style none
        vertical-align top
        @media screen and (max-width: 567px)
          width 50%
          text-align center
          padding .5em 0
          border-top 1px solid darken(clr_bk, 20%)
          border-left 1px solid darken(clr_bk, 20%)
          box-sizing border-box
          &:first-child
            border-left 0
      a
        color: inherit
        text-decoration: none
        display: block
        padding: 0 1em
        font-size: 14px
        &:hover
          color clr_wh
          background clr_bk
        @media screen and (max-width: 567px)
          color #f4f7f9
          font-size 12px
        .octicon
          display none
          @media screen and (max-width: 567px)
            display block
      .active
        color clr_wh
        background clr_bk
        @media screen and (max-width: 567px)
          &[href*=search]
            color clr_red
          &[href*=star]
            color clr_yl
